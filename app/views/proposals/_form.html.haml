= form_for @proposal, role: 'form' do |f|
  - if @proposal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@proposal.errors.count, "error")} prohibited this proposal from being saved:"
      %ul
        - @proposal.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :subject, :class => 'sr-only'
    = f.text_field :subject, placeholder: 'Subject', :class => 'form-control input-lg'
  .form-group
    = f.label :body, :class => 'sr-only'
    = f.text_area :body, placeholder: 'Description...', :rows => 15, :class => 'form-control'

  .form-group
    = f.submit 'Save', :class => 'btn btn-primary btn-lg'
