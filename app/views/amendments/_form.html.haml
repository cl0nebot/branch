= form_for @amendment do |f|
  - if @amendment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@amendment.errors.count, "error")} prohibited this amendment from being saved:"
      %ul
        - @amendment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :proposal_id
    = f.number_field :proposal_id
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :upvotes
    = f.number_field :upvotes
  .field
    = f.label :downvotes
    = f.number_field :downvotes
  .field
    = f.label :confidence
    = f.text_field :confidence
  .field
    = f.label :heat
    = f.text_field :heat
  .actions
    = f.submit 'Save'
