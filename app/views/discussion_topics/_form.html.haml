= form_for @discussion_topic do |f|
  - if @discussion_topic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discussion_topic.errors.count, "error")} prohibited this discussion_topic from being saved:"
      %ul
        - @discussion_topic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :upvotes
    = f.number_field :upvotes
  .field
    = f.label :downvotes
    = f.number_field :downvotes
  .field
    = f.label :heat
    = f.text_field :heat
  .field
    = f.label :confidence
    = f.text_field :confidence
  .actions
    = f.submit 'Save'
