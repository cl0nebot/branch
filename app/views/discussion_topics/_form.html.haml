= form_for @discussion_topic do |f|
  - if @discussion_topic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discussion_topic.errors.count, "error")} prohibited this discussion_topic from being saved:"
      %ul
        - @discussion_topic.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :subject, :class => 'sr-only'
    = f.text_field :subject, :class => 'form-control input-lg', :placeholder => 'Subject'

  .form-group
    = f.label :text, 'Prompt', :class => 'sr-only'
    = f.text_area :text, :class => 'form-control input-lg', :placeholder => 'Prompt'

  .form-group
    = f.submit 'Save', :class => 'btn btn-primary btn-lg'
