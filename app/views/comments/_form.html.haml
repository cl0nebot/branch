= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :parent_type
    = f.text_field :parent_type
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :upvotes
    = f.number_field :upvotes
  .field
    = f.label :downvotes
    = f.number_field :downvotes
  .field
    = f.label :confidence
    = f.text_field :confidence
  .field
    = f.label :heat
    = f.text_field :heat
  .actions
    = f.submit 'Save'
