!!! html
%html
  %head
    %title= content_for(:title) || "Branch: Decentralized Democracy"
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = stylesheet_link_tag "application"

  %body
    %header
      %nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
        .container
          .navbar-header
            %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-collapse")
              %span.sr-only Toggle
              %span.icon-bar/
              %span.icon-bar/
              %span.icon-bar/
            = link_to "Branch", root_url, :class => 'navbar-brand'

          #navbar-collapse.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li= link_to "A link", "#"

            - if user_signed_in?
              .navbar-right
                Welcome User
            - else
              = form_for(User.new, :as => :user, :url => session_path(:user), html: { :class => 'navbar-form navbar-right'} ) do |f|
                .form-group
                  = f.label :email, :class => 'sr-only'
                  = f.email_field :email, :placeholder => 'Enter Email', :class => 'form-control input-sm'

                .form-group
                  = f.label :password, :class => 'sr-only'
                  = f.password_field :password, :placeholder => 'Password', :class => 'form-control input-sm'

                = f.submit 'Sign in', :class => 'btn btn-primary btn-sm'



    = yield

    %footer
      .container
        Some footer stuff will go here

